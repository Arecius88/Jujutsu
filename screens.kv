WindowManager:
	HomeScreen:
	YellowScreen:
    OrangeScreen:
    GreenScreen:
    BlueScreen:
    BrownScreen:
    FirstDanScreen:
    SecondDanScreen:
    ThirdDanScreen:


<HomeScreen>:
	name: "home"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
        Spinner:
            id: spinner_menu_home
            text: "Choose grade"
            values: ("Home", "Yellow", "Orange")
            size_hint_y: None
            height: "48dp"
            background_color: (255/255,142/255,0,1)
            on_text: root.on_spinner_select_grades(spinner_menu_home.text) #fångar in värdet i Spinner (spinner_menu.text)


		Label:
			text: "Choose grade"
			font_size: 32
			padding_y: 10



<YellowScreen>:
	name: "yellow"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

        Spinner:
            id: spinner_menu_grades
            text: "Home"
            values: ("Home", "Uke", "Atemi")
            size_hint_y: None
            height: "48dp"
            background_color: (255/255,142/255,0,1)
            on_text: root.on_spinner_select_technique(spinner_menu_grades.text)

		Label:
		    id: yellow_screen_label
			text: "Yellow screen"
			font_size: 32

		Button:
			text: "Go to orange"
			font_size: 32
			on_release:
				app.root.current = "orange"
				root.manager.transition.direction = "left"

		Button:
			text: "Back to home"
			font_size: 32
			on_release:
				app.root.current = "home"
				root.manager.transition.direction = "down"

<OrangeScreen>
    name: "orange"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Orange Screen"
			font_size: 32

		Button:
			text: "Go to green"
			font_size: 32
			on_release:
				app.root.current = "orange"
				root.manager.transition.direction = "left"

		Button:
			text: "Back to home"
			font_size: 32
			on_release:
				app.root.current = "home"
				root.manager.transition.direction = "down"