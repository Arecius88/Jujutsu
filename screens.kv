WindowManager:
	HomeScreen:
	YellowScreen:
    OrangeScreen:
    GreenScreen:
    BlueScreen:
    BrownScreen:
    FirstDanScreen:
    SecondDanScreen:
    ThirdDanScreen:


<HomeScreen>:
	name: "home"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
        Spinner:
            id: spinner_menu_home
            text: "Choose grade"
            values: ("Yellow", "Orange", "Green", "Blue", "Brown", "1st Dan")
            size_hint_y: None
            height: "48dp"
            background_color: (255/255,142/255,0,1)
            on_text: root.on_spinner_select_grades(spinner_menu_home.text) #fångar in värdet i Spinner (spinner_menu.text)


		Label:
			text: "Choose grade"
			font_size: 32
			padding_y: 5
            padding_x: 5

        GridLayout:
            cols: 2
            rows: 2
            spacing: "8dp"
            size_hint_y: "1dp"
            height: self.minimum_height 
            Label:
                text: "If you don't want random \nklick the button"
                font_size: 30
                padding_x:5
            ToggleButton:
                text: "Not Random"
                font_size: 30
                padding_x: 5
                on_state: 
                    print("Jag är nu i staus {}".format(self.state))
            Label:
                text: "test"

            Label:
                text: "test"



<YellowScreen>:
	name: "yellow"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

        Spinner:
            id: spinner_menu_grades
            text: "Choose technique family"
            values: ("Uke wasa", "Atemi wasa", "Kansetsu wasa","Nage wasa", "Kihon")
            size_hint_y: None
            height: "48dp"
            background_color: (255/255,142/255,0,1)
            on_text: root.on_spinner_select_technique(spinner_menu_grades.text)

#The label for displaying the technics
        Label:
            id: technic_displayer_label
            font_size: "25"
            text: "Choose a technic Family"

        ProgressBar:
            id: my_progressbar
            size_hint_x: .85
            pos_hint: {"center_x": .5, "top" : 0}
            value: 0
            max: 1

#Button for the new technic
        Bubble:
            size_hint_y: None
            height: "100dp"
            background_color: (1, 0.741, 0.2, 1)


            BubbleButton:
                id: technic_button
                text: "New technic"
                #background_normal: "" #can use if I want a sharper color
                background_color: (1, 0.741, 0.2, 1)
                on_press: root.new_technic_button()

#Button for the reset
        Bubble:
            size_hint_y: None
            height: "100dp"

            BubbleButton:
                id: reset_button
                text: "Reset"
                background_color: (1,0,0,1)
                on_press: root.reset_button()
        Bubble:
            size_hint_y: None
            height: "100dp"
            arrow_pos: "left_mid"

            BubbleButton:
                id: home_button
                text: "Back"
                on_press:
                    root.home_screen_button()
                    root.manager.transition.direction = "right"


