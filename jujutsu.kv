MainWidget:

<MainWidget>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height


#todo research if the color can change in the "dropdown" buttons in the Spinner.

#Meny position in the head of the window
        Spinner:
            id: menu
            text: "Home"
            values: ("Home", "Uke Wasa", "Atemi Wasa", "Kansetsu Wasa", "Nage wasa", "All Kihon")
            size_hint_y: None
            height: "48dp"
            background_color: (255/255,142/255,0,1)
            on_text: root.on_spinner_select(self.text) #fångar in värdet i Spinner




#The label for displaying the technics

        GridLayout:
            columns:1
            rows:3

            size: root.width, root.height
            Label:
                id: technic_displayer_label
                font_size: "25"
                text: root.technic_family_button_text

            ProgressBar:
                id: my_progressbar
                paddig: "10dp"
                min: 0.0
                max: 1.0
                value: .30

            GridLayout:
                columns: 1
                rows: 2

                BoxLayout:
                    orientation: "horizontal"

                    Label:
                        id: static_technic_in_list
                        text: root.static_length_of_list

                    Label:
                        id: technic_list_length
                        text: root.down_counter_of_technics

                    Label:
                        id: static_technic_left_in_list
                        text: root.static_technics_left

                    Label:
                        id: length_of_list_counter
                        text: root.down_counter_of_technics


                Button:
                    text: "placeholder3"


#Button for the new technic
        Bubble:
            size_hint_y: None
            height: "100dp"
            arrow_pos: "top_mid"
            background_color: (1, 0.741, 0.2, 1)


            BubbleButton:
                id: technic_button
                text: "New technic"
                #background_normal: "" #can use if I want a charper color
                background_color: (1, 0.741, 0.2, 1)
                on_press: root.new_technic_button()

#Button for the reset
        Bubble:
            size_hint_y: None
            height: "100dp"

            BubbleButton:
                id: reset_button
                text: "Reset"
                background_color: (1,0,0,1)
                on_press: root.reset_button()
